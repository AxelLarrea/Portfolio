---
import GitRepoIcon from '../assets/icons/GitRepoIcon.astro';
import WebIcon from '../assets/icons/WebIcon.astro';

interface Tag {
    name: string;
    class: string;
    icon: any;
}

const { name, description, deploy_link, github_link, image, tecnologies } = Astro.props;
---

<div class="flex flex-col gap-4 mx-auto md:flex-row md:max-w-full md:h-[300px]">
    <img class="h-60 w-full object-cover rounded-lg sm:h-full md:w-[500px]" src={image} alt={name} width="500" height="280" />
    <div class="flex flex-col gap-2 md:justify-between">
        <div class="flex flex-col gap-2">
            <h2 class="text-2xl font-bold text-white/90">{name}</h2>
            <div class="flex flex-wrap gap-2">
                {tecnologies.map((tag: Tag) => (
                    <span class={`${tag.class} flex items-center gap-1 text-sm rounded-full px-2 py-1`}>
                        <tag.icon class="size-4" />
                        {tag.name}
                    </span>
                ))}
            </div>
            <p class="text-base text-gray-400 mt-2">{description}</p>
        </div>
        <div class="flex gap-2">
            <button>
                <a  class="flex items-center gap-2 p-2 border border-gray-800 rounded-full transition hover:border-gray-700"
                    href={deploy_link} target="_blank" rel="noopener noreferrer">
                    <WebIcon class="size-6" />
                    Preview
                </a>
            </button>

            <button>
                <a  class="flex items-center gap-2 p-2 border border-gray-800 rounded-full transition hover:border-gray-700"
                    href={github_link} target="_blank" rel="noopener noreferrer">
                    <GitRepoIcon class="size-6" />
                    Code
                </a>
            </button>
        </div>
    </div>
</div>