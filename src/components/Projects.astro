---
import ProjectItem from './ProjectItem.astro';

import CssIcon from '../assets/icons/CSSIcon.astro';
import ReactIcon from '../assets/icons/ReactIcon.astro';
import TailwindIcon from '../assets/icons/TailwindIcon.astro';
import TypescriptIcon from '../assets/icons/TypescriptIcon.astro';
import SupabaseIcon from '../assets/icons/SupabaseIcon.astro';

const tags = {
    CSS: {
        name: "CSS",
        class: "bg-[#3B5FD1]/90 text-white",
        icon: CssIcon,
    },
    REACT: {
        name: "React",
        class: "bg-blue-900 text-white",
        icon: ReactIcon,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#60BDFE]/50 text-white",
        icon: TailwindIcon,
    },
    TYPESCRIPT: {
        name: "TypeScript",
        class: "bg-[#4A90E2] text-white",
        icon: TypescriptIcon,
    },
    SUPABASE: {
        name: "Supabase",
        class: "bg-purple-900 text-white",
        icon: SupabaseIcon,
    },
}

const projects = [
    {
        name: "Clon de MercadoLibre",
        description: "Web app donde podrás realizar búsqueda de productos filtrarlos y ordenarlos.",
        deploy_link: "https://mcl-clone.vercel.app/",
        github_link: "https://github.com/AxelLarrea/mcl-clone",
        image: "../../public/mcl-clone-ss.webp",
        tecnologies: [tags.REACT, tags.CSS]
    },
    {
        name: "Superheroes web app",
        description: "Web de superheroes en la cual podrás buscar personajes y ver su biografía.",
        deploy_link: "https://superheroes-ts.vercel.app/",
        github_link: "https://github.com/AxelLarrea/superheroes_ts",
        image: "../../public/superheroes-ss.webp",
        tecnologies: [tags.REACT, tags.TYPESCRIPT, tags.TAILWIND, tags.SUPABASE]
    },
]

---

{
    projects.map(project => <ProjectItem {...project} />)
}