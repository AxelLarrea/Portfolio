---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import Pill from '../components/Pill.astro';
import Projects from '../components/Projects.astro';

import profilePicture from '../../public/ProfilePicture.webp';
import GithubIcon from '../assets/icons/GithubIcon.astro';
import LinkedInIcon from '../assets/icons/LinkedInIcon.astro';
import GmailIcon from '../assets/icons/GmailIcon.astro';
import ProjectsIcon from '../assets/icons/ProjectsIcon.astro';
// Completar el texto de la primer secci√≥n.      
---

<Layout>
	<main class="max-w-[600px] flex flex-col items-center justify-center gap-4">
		<section id="home" class="w-full flex flex-col gap-4 px-8 pt-36">
			<img class="w-24 h-24 rounded-full object-cover" src={profilePicture.src} alt="Axel Larrea" width="96" height="96" />
			<div class="flex items-center gap-2">
				<h1 class="text-4xl font-bold opacity-95">Hola! Soy Axel Larrea</h1>
				<Badge>Open to work</Badge>
			</div>
			<h2 class="text-2xl opacity-90">Desarrollador web frontend. </h2>

			<div class="flex gap-4">
				<Pill href="https://linkedin.com/in/axel-larrea">
					<LinkedInIcon class="size-6" />
					LinkedIn
				</Pill>
			
				<Pill href="https://github.com/AxelLarrea">
					<GithubIcon class="size-6" />
					GitHub
				</Pill>
				
				<Pill href="mailto:axel.larrea.9@gmail.com">
					<GmailIcon class="size-6" />
					axel.larrea.9@gmail.com
				</Pill>
			</div>
		</section>

		<section id="projects" class="w-full flex flex-col gap-4 px-8 pt-36">
			<h2 class="flex items-center gap-2 text-2xl font-bold opacity-95">
				<ProjectsIcon />
				Proyectos
			</h2>
			<Projects />
		</section>
	</main>
</Layout>
